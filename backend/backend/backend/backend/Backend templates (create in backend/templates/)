<!doctype html>
<html>
<head>
  <title>CBT Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <h3 class="card-title mb-3">CBT Login (Server page)</h3>
            <p class="text-muted">Use the React frontend to take exams. Default accounts: admin/admin123, student/student123</p>
            <form id="serverLogin" method="post" action="/api/login" onsubmit="login(event)">
              <div class="mb-3">
                <label class="form-label">Username</label>
                <input id="username" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Password</label>
                <input id="password" type="password" class="form-control" required>
              </div>
              <button class="btn btn-primary" type="submit">Login via API</button>
            </form>
            <hr>
            <a href="/admin/dashboard" class="btn btn-outline-secondary">Open Admin (server pages)</a>
          </div>
        </div>
      </div>
    </div>
  </div>
<script>
async function login(e){
  e.preventDefault();
  const username = document.getElementById("username").value;
  const password = document.getElementById("password").value;
  const res = await fetch('/api/login', {
    method:'POST',
    headers:{'Content-Type':'application/json'},
    body: JSON.stringify({username,password})
  });
  if(res.ok){
    const data = await res.json();
    alert("Login OK: " + data.role);
  } else {
    alert("Login failed");
  }
}
</script>
</body>
